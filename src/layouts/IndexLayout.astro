---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Layout from "./Layout.astro";
---

<Layout title={title}>
  <main
    class="w-4/5 h-5/6 rounded-md shadow shadow-slate-300 p-8 overflow-y-hidden"
  >
    <slot />
  </main>
</Layout>

<style>
  main {
    border: 1px solid white;
    background-color: rgba(255, 255, 255, 0.2);
  }
</style>
